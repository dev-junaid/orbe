<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div id="login">
  <div class="text-center login-logo">
    <a href="<%= root_path %>"> <%= image_tag 'orbe-logo.png' %></a>
  </div>
  <div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-5">
        <div id="login-box" class="col-md-12">
            <h3 class="text-center text-infoo">LOGIN</h3>
            <div class="form-group">
              <%= f.label :email, class: 'text-infoo' %><br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: 'text-infoo'  %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
            <div class="form-group">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me, class: "text-info"%>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
              <%= f.submit "Log in", class: "btn btn-info btn-md btn-submit" %>
            </div>
            <div id="register-link" class="text-center">
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Register here", new_registration_path(resource_name), class: 'text-info' %>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>