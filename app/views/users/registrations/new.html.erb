<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div id="login">
    <div class="text-center login-logo">
      <%= image_tag 'orbe-logo.png' %>
    </div>
    <div class="container">
      <div id="login-row" class="row justify-content-center align-items-center">
        <%= render "users/shared/error_messages", resource: resource %>
        <div id="login-column" class="col-md-5">
          <div id="login-box" class="col-md-12">
              <h3 class="text-center text-infoo">SIGNUP</h3>
              <div class="form-group">
                <%= f.label :first_name, class: 'text-infoo' %><br>
                <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :last_name, class: 'text-infoo' %><br>
                <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :email, class: 'text-infoo' %><br>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :password, class: 'text-infoo'  %><br />
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation, class: 'text-infoo'  %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.submit "Sign up", class: "btn btn-info btn-md btn-submit" %>
              </div>
              <div id="register-link" class="text-center">
                <%- if controller_name != 'sessions' %>
                  Already have account, <%= link_to "Log in", new_session_path(resource_name) %> here<br />
                <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>