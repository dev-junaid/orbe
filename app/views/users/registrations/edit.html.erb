<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div id="login">
    <div class="text-center login-logo">
     <a href="<%= root_path %>"> <%= image_tag 'orbe-logo.png' %></a>
    </div>
    <div class="container">
      <div id="login-row" class="row justify-content-center align-items-center">
        <%= render "users/shared/error_messages", resource: resource %>
        <div id="login-column" class="col-md-8">
          <div id="login-box" class="col-md-12">

              <h3 class="text-center text-infoo">Update Profile</h3>
            <div class="mid-fields">
              <div class="form-group">
                <%= f.label :first_name, class: 'text-infoo' %><br>
                <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :last_name, class: 'text-infoo' %><br>
                <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
              </div>
            </div>
            <div class="full-fields">
              <div class="form-group">
                <%= f.label :email, class: 'text-infoo' %><br>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
            <div class="full-fields">
              <div class="form-group">
              <%= f.label :street_address, class: 'text-infoo' %><br>
              <%= f.text_field :street_address, autofocus: true, class: "form-control" %>
              </div>
            </div>
            <div class="mid-fields">
              <div class="form-group">
                <%= f.label :city, class: 'text-infoo' %><br>
                <%= f.text_field :city, autofocus: true, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :state, class: 'text-infoo' %><br>
                <%= f.text_field :state, autofocus: true, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :zip, class: 'text-infoo' %><br>
                <%= f.text_field :zip, autofocus: true, class: "form-control" %>
              </div>
            </div>
            <div class="full-fields">
              <div class="form-group">
                <%= f.label :country, class: 'text-infoo' %><br>
                <%= f.text_field :country, autofocus: true, class: "form-control" %>
              </div>
            </div>
            <div class="mid-fields">
              <div class="form-group">
                <%= f.label :current_password, class: 'text-infoo'  %><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %><br />
                <i>(we need your current password to confirm your changes)</i><br />
              </div>
            </div>
              <div class="form-group">
                <%= f.submit "Update", class: "btn btn-info btn-md btn-submit" %>
              </div>
              <div id="register-link" class="text-center">
                <%- if controller_name != 'sessions' %>
                  Go  <%= link_to "back", root_path %> to dashboard<br />
                <% end %>
              </div>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<style>
  .mid-fields{
      display: flex;
  }
  .mid-fields .form-group {
      width: 50%;
      margin: 20px 5px;
  }
  .full-fields{
      display: flex;
  }
  .full-fields .form-group {
      margin: 20px 5px;
      width: 100%;
  }
</style>